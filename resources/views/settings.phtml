  <?php echo csrf_field(); ?>
  <script>
    (function(){
      const modal = document.getElementById('translations-modal');
      const form = document.getElementById('translation-form');
      const inputId = document.getElementById('tr-category-id');
      const inputLang = document.getElementById('tr-language');
      const inputName = document.getElementById('tr-name');
      const err = document.getElementById('tr-error');
      const ok = document.getElementById('tr-success');
      const btnSave = document.getElementById('tr-save');
      const btnDelete = document.getElementById('tr-delete');

      modal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        inputId.value = button.getAttribute('data-category-id');
        form.reset();
        err.classList.add('d-none');
        ok.classList.add('d-none');
      });

      function post(url, data) {
        const token = document.querySelector('input[name="csrf"]')?.value || '';
        const body = new URLSearchParams({ ...data, csrf: token }).toString();
        return fetch(url, {
          method: 'POST',
          credentials: 'same-origin',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
          },
          body
        }).then(r => r.json());
      }

      function get(url, data) {
        const qs = new URLSearchParams(data).toString();
        return fetch(url + '&' + qs, {
          method: 'GET',
          credentials: 'same-origin',
          headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
          }
        }).then(r => r.json());
      }

      btnSave.addEventListener('click', function() {
        if (!inputName.value.trim()) {
          err.textContent = '<?php echo I18N::translate('Category name cannot be empty'); ?>';
          err.classList.remove('d-none');
          return;
        }
        err.classList.add('d-none');
        // Use Admin endpoint multiplexer to avoid 404 and handle JSON
        post('<?php echo e(route('module', ['module' => $module_name, 'action' => 'Admin'])); ?>', {
          op: 'upsert-translation',
          category_id: inputId.value,
          language: inputLang.value,
          name: inputName.value
        }).then(json => {
          if (json.success) {
            ok.textContent = '<?php echo I18N::translate('Saved'); ?>';
            ok.classList.remove('d-none');
            setTimeout(() => { ok.classList.add('d-none'); }, 1500);
          } else {
            err.textContent = json.message || 'Error';
            err.classList.remove('d-none');
          }
        }).catch(() => {
          // Fallback GET in case server redirects POST
          get('<?php echo e(route('module', ['module' => $module_name, 'action' => 'UpsertCategoryTranslation'])); ?>', {
            category_id: inputId.value,
            language: inputLang.value,
            name: inputName.value
          }).then(json => {
            if (json.success) {
              ok.textContent = '<?php echo I18N::translate('Saved'); ?>';
              ok.classList.remove('d-none');
              setTimeout(() => { ok.classList.add('d-none'); }, 1500);
            } else {
              err.textContent = json.message || 'Error';
              err.classList.remove('d-none');
            }
          }).catch(() => {
            err.textContent = 'Error';
            err.classList.remove('d-none');
          });
          err.classList.remove('d-none');
        });
      });

      btnDelete.addEventListener('click', function() {
        err.classList.add('d-none');
        post('<?php echo e(route('module', ['module' => $module_name, 'action' => 'Admin'])); ?>', {
          op: 'delete-translation',
          category_id: inputId.value,
          language: inputLang.value
        }).then(json => {
          if (json.success) {
            ok.textContent = '<?php echo I18N::translate('Deleted'); ?>';
            ok.classList.remove('d-none');
            setTimeout(() => { ok.classList.add('d-none'); }, 1500);
          } else {
            err.textContent = json.message || 'Error';
            err.classList.remove('d-none');
          }
        }).catch(() => {
          // Fallback GET in case server redirects POST
          get('<?php echo e(route('module', ['module' => $module_name, 'action' => 'DeleteCategoryTranslation'])); ?>', {
            category_id: inputId.value,
            language: inputLang.value
          }).then(json => {
            if (json.success) {
              ok.textContent = '<?php echo I18N::translate('Deleted'); ?>';
              ok.classList.remove('d-none');
              setTimeout(() => { ok.classList.add('d-none'); }, 1500);
            } else {
              err.textContent = json.message || 'Error';
              err.classList.remove('d-none');
            }
          }).catch(() => {
            err.textContent = 'Error';
            err.classList.remove('d-none');
          });
          err.classList.remove('d-none');
        });
      });
    })();
  </script>
